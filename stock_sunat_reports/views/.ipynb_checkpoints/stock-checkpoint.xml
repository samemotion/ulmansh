<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_stock_view_picking_form_">
            <field name="name">inherit.stock.view.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='origin']" position="before">
                    <field name="x_document_type"/>
                    <field name="x_operation_type"/>

                </xpath>
                <xpath expr="//field[@name='group_id']" position="before">
                     <field name="x_move_date" attrs="{'readonly':[('state', 'in', ('done','cancel'))]}"/>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="inherit_stock_view_move_form_pe">
            <field name="name">inherit.stock.move.form.pe</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="x_move_date"/>
                    <field name="x_operation_type"/>
                    <field name="x_document_type"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
